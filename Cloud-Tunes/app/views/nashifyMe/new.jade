doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1=title
    .row
      .small-12.columns
        a.button(href='/') Home

    .row
      .small-3.small.centered.columns
        img(src='http://moosware.net/Photoplorer/images/photo_album_flipping_md_wht.gif')
    .row
      .small-12.columns
        form(action='/albums', method='post', enctype='multipart/form-data')
          fieldset
            legend= title
            .row
              .small-4.columns
                label Title
                input(type='text', name='title', autofocus)
              .small-4.columns
                label Date Taken
                input(type='date', name='taken')
              .small-2.columns
                label Cover Image
                input(type='file', name='cover')
              .small-2.columns
                button.small.radius Insert Album

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

