doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Priorities
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Priorities
    .row
      .small-12.columns
        a.button.tiny.radius(href='/index.html') Task Management
    .row
      .small-6.columns
        form#priority
          fieldset
            legend Priority Creation
            .row
              .small-4.columns
                label Name
                input(type='text', name='name', autofocus=true)
              .small-4.columns
                label Value
                input(type='text', name='value')
              .small-4.columns
                label &nbsp;
                button.expand.tiny.radius Create
      .small-6.columns
    .row
      .small-6.columns
        table#priorities
          thead
            tr
              th Name
              th Value
              th
              th
          tbody
      .small-6.columns

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/priorities.js')

